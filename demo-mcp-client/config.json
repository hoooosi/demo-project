{
    "servers": {
        "fetch": {
            "type": "stdio",
            "args": [
                "mcp-server-fetch"
            ],
            "command": "uvx"
        },
        "time": {
            "type": "stdio",
            "command": "uvx",
            "args": [
                "mcp-server-time",
                "--local-timezone=America/New_York"
            ]
        }
    }
}